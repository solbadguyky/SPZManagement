<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/configuration_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ConfigurationActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/configuration_frame_appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">


        <android.support.v7.widget.Toolbar
            android:id="@+id/configuration_frame_toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/AppTheme.PopupOverlay">


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/menu_editText_AppID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="App ID" />

            <EditText
                android:id="@+id/menu_editText_Cluster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cluster" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/menu_button_Connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Connect" />

                <TextView
                    android:id="@+id/menu_textView_Connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/menu_button_Connect"
                    android:padding="5dp"
                    android:text="Connection Status" />

            </RelativeLayout>

            <EditText
                android:id="@+id/menu_editText_Channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Channel" />

            <EditText
                android:id="@+id/menu_editText_Event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/menu_button_Submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Regist" />

                <TextView
                    android:id="@+id/menu_textView_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/menu_button_Submit"
                    android:padding="5dp" />
            </RelativeLayout>

            <Button
                android:id="@+id/menu_button_CheckChannel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get All Current Connected Channels/Events" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/configuration_frame_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>